@model IEnumerable<BTRS.Models.Bus>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        body {
            background-color: snow;
        }
    </style>
</head>
<body>
<h1>Buses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.captain_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numOfSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trip.destination)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.captain_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numOfSeats)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trip.destination)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
